<Window x:Class="Soroban.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Soroban"
        mc:Ignorable="d"
        Title="Soroban" Width="640" Height="480" Background="WhiteSmoke">
    <ContentControl Content="{Binding}" ContentTemplate="{StaticResource RootView}" Focusable="False">
        <ContentControl.LayoutTransform>
            <ScaleTransform ScaleX="2" ScaleY="2"/>
        </ContentControl.LayoutTransform>
    </ContentControl>
</Window>
